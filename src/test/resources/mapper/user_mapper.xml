<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mybatis.IUserDao">

    <resultMap id="userMap" type="com.demo.mybatis.User">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="queryUserInfoById" parameterType="java.lang.Long" resultMap="userMap">
       select id, user_id, name from a_user where id = #{id}
    </select>

</mapper>
