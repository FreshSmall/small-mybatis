<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mybatis.IDynamicSqlMapper">

    <select id="queryUserByCondition" parameterType="com.demo.mybatis.User" resultMap="userMap">
        SELECT id, user_id, name, email FROM a_user where 1 = 1
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="userId != null">
            and user_id = #{userId}
        </if>
    </select>
    
    <resultMap id="userMap" type="com.demo.mybatis.User">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="email" property="email"/>
    </resultMap>
    
</mapper>
