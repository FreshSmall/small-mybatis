<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mybatis.IUserDao">

    <select id="queryUserInfoById" parameterType="java.lang.Long" resultType="com.demo.mybatis.User">
        SELECT id, user_id, name, create_time
        FROM a_user
        where id = #{id}
    </select>

<select id="queryUserInfo" parameterType="com.demo.mybatis.User" resultType="com.demo.mybatis.User">
    SELECT id, user_id, name, create_time
    FROM a_user
    where id = #{id} and user_id = #{user_id}
</select>

</mapper>
